<div class="row">
	<div class="col-md-4 col-md-offset-4"> 

		<h2>Forgot your password?</h2>

		<%= form_for(resource, as: resource_name, url: password_path(resource_name), class: "form", html: { method: :post }) do |f| %>
		  <%= devise_error_messages! %>

		  <label for="inputEmail" class="sr-only">Email address</label>
				  <%= f.email_field :email, autofocus: true, id: "inputEmail", class: "form-control", placeholder: "Email address" %>

		<br>
		  <%= f.submit "Send me reset password instructions", class: "btn btn-primary btn-block" %>
		<% end %>



		<%= render "devise/shared/links" %>
	</div>
</div>