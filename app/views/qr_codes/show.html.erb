<div class="row">
  <div class="col-md-4 col-md-offset-4"> 
    <h1>Your Secret QR code</h1>

    <style type="text/css">
    table {
      border-width: 0;
      border-style: none;
      border-color: #0000ff;
      border-collapse: collapse;
    }
    td {
      border-width: 0; 
      border-style: none;
      border-color: #0000ff; 
      border-collapse: collapse; 
      padding: 0; 
      margin: 0; 
      width: 10px; 
      height: 10px; 
    }
    td.black { background-color: #000; }
    td.white { background-color: #fff; }
    </style>

    <table>
    <% @qr.modules.each_index do |x| %>
      <tr>  
      <% @qr.modules.each_index do |y| %>
       <% if @qr.dark?(x,y) %>
        <td class="black"/>
       <% else %>
        <td class="white"/>
       <% end %>
      <% end %>
      </tr>
    <% end %>
    </table>
    <br>
    <% if current_user.active_sms? %>
      <%= link_to "Disable sms code", qr_codes_disable_sms_path, class: 'btn btn-danger' %>
    <%else %>
      <%= link_to "Enable sms code", qr_codes_enable_sms_path, class: 'btn btn-success' %>
    <% end %>
  </div>
</div>
